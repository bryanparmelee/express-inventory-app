extends layout 

block content       
    h1= title
    //- img.section-img(src='/images/gear.jpg')
    div.items-container
        each item in item_list 
            a.item-container(href=item.url)
                if item.image === undefined
                    img(src='/images/item-default.jpg')
                else
                    img(src='/uploads/'+item.image alt=item.name) 
                p.item-title #{item.name}

        else
            p There are no items 