extends layout 

block content 

    h1 #{category.name}
    p.description #{category.description}

    h4 Items 
    div.items-container             
        each item in category_items 
            a.item-container(href=item.url)
                img(src=item.image alt=item.name)
                p #{item.name}

        else 
            p This category has no items.

    div.buttons 
        a.btn(href=category.url+'/update')
            p Update category
     
        a.btn(href=category.url+'/delete')
            p Delete category